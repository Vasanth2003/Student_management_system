{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    { "handle": "@vercel/node" },
    {
      "src": "/api/(.*)",
      "dest": "/$1"
    },
    {
      "src": ".*",
      "dest": "/index.js"
    }
  ]
}
